@{
    ViewData["Title"] = "Add New Movie";
}

@model Movie

<form method="POST" class="p-3">
    <div class="mb-3">
        <label asp-for="Category" class="form-label">Category</label>
        <select class="form-select" asp-for="Category" required>
            <option value="" selected disabled></option>
            <option value="Action">Action</option>
            <option value="Adventure">Adventure</option>
            <option value="Animation">Animation</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Fantasy">Fantasy</option>
            <option value="Horror">Horror</option>
            <option value="Mystery">Mystery</option>
            <option value="Romance">Romance</option>
            <option value="Sci-Fi">Sci-Fi</option>
            <option value="Thriller">Thriller</option>
            <option value="Western">Western</option>
        </select>
    </div>
    
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Movie Title</label>
        <input class="form-control" asp-for="Title" required>
    </div>

    <div class="mb-3">
        <label asp-for="Year" class="form-label">Release Year</label>
        <input class="form-control" asp-for="Year" required>
    </div>

    <div class="mb-3">
        <label asp-for="Director" class="form-label">Director</label>
        <input class="form-control" asp-for="Director" required>
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Rating</label>
        <select class="form-select" asp-for="Rating" required>
            <option value="" selected disabled></option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Edited" class="form-label">Edited</label>
        <select class="form-select" asp-for="Edited">
            <option value="" selected disabled></option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="LentTo" class="form-label">Lent To</label>
        <input class="form-control" asp-for="LentTo">
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Notes</label>
        <input class="form-control" asp-for="Notes" maxlength="25">
    </div>

    <button type="submit" class="btn btn-primary">Add Movie</button>
</form>